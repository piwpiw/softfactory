# --- Claude / Anthropic ---
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# --- Telegram Bot Token ---
# Get from: @BotFather on Telegram
# Format: BOTID:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TELEGRAM_BOT_TOKEN=BOTID:XXXXXXXXXXXXXXXXXXXXXXXXXXXX
TELEGRAM_CHAT_ID=XXXXXXXXX

# --- Google Search MCP (Optional) ---
GOOGLE_SEARCH_API_KEY=PLACEHOLDER
GOOGLE_SEARCH_CX=PLACEHOLDER

# --- PM2 / Process Management ---
PM2_APP_NAME=sonol-bot

# --- Project Configuration ---
PROJECT_NAME=CooCook
ENVIRONMENT=development
LOG_LEVEL=WARNING

# --- Sonolbot Daemon Configuration ---
SONOLBOT_ALLOWED_SKILLS=sonolbot-telegram,sonolbot-tasks
SONOLBOT_MULTI_BOT_MANAGER=1
SONOLBOT_BOT_WORKSPACES_DIR=daemon/bots
SONOLBOT_CLAUDE_MODEL=sonnet
SONOLBOT_CLAUDE_EFFORT=high
SONOLBOT_REWRITER_ENABLED=1
SONOLBOT_REWRITER_MODEL=haiku
SONOLBOT_REWRITER_EFFORT=low
LOGS_DIR=D:\Project\logs
LOG_RETENTION_DAYS=7
TELEGRAM_ALLOWED_USERS=XXXXXXXXX

# --- SoftFactory Platform ---
# CRITICAL: Generate random 32+ character string with special characters
# Command: openssl rand -hex 32
PLATFORM_SECRET_KEY=your-32-char-random-secret-key-XXXXXXXXXXXXX
PLATFORM_URL=http://localhost:8000

# --- Stripe (Optional - payments disabled without keys) ---
# Get from: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_PLACEHOLDER
STRIPE_PUBLISHABLE_KEY=pk_test_PLACEHOLDER
STRIPE_WEBHOOK_SECRET=whsec_test_PLACEHOLDER

# --- MCP Servers Configuration ---

# Brave Search (optional)
# Get from: https://api.search.brave.com/
BRAVE_API_KEY=PLACEHOLDER

# GitHub (optional)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=PLACEHOLDER

# --- Database Configuration ---
# Development: SQLite (relative path for simplicity)
# Production: PostgreSQL with full connection string
DATABASE_URL=sqlite:///D:/Project/platform.db

# --- JWT Authentication ---
# CRITICAL: Generate random 32+ character string with special characters
# Command: openssl rand -hex 32
JWT_SECRET=your-32-char-random-jwt-secret-XXXXXXXXXXXXX

# --- Multi-Agent Token Budget ---
# Total tokens available per session
TOKEN_BUDGET_TOTAL=200000
TOKEN_BUDGET_ORCHESTRATOR=5000
TOKEN_BUDGET_BUSINESS=20000
TOKEN_BUDGET_ARCHITECT=25000
TOKEN_BUDGET_DEVELOPMENT=100000
TOKEN_BUDGET_QA_SECURITY=30000
TOKEN_BUDGET_RESERVE=20000
